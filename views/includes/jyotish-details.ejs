<div class="modal fade" id="form1" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Write to us</h4>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="needs-validation" method="post" action="/contact" novalidate>
                <div class="modal-body mx-3">
                    <div class="md-form">
                        <i class="fas fa-user prefix grey-text"></i>
                        <input type="text" placeholder="Name *" id="name" class="form-control">
                        <div class="invalid-feedback">Please provide a valid Name.</div>
                        <div class="md-form">
                            <i class="fas fa-envelope prefix grey-text"></i>
                            <input type="email" id="email" class="form-control validate">
                            <div class="invalid-feedback">Please provide a valid Email.</div>
                        </div>
                        <div class="md-form">
                            <i class="fas fa-phone prefix grey-text"></i>
                            <input type="tel" id="phone" class="form-control validate">
                            <div class="invalid-feedback">Please provide a valid Phone No.</div>
                        </div>
                        <div class="md-form">
                            <i class="fas fa-pencil prefix grey-text"></i>
                            <textarea type="text" id="message" placeholder="Message" class="md-textarea form-control"
                                rows="4"></textarea>
                        </div>
                        <button class="btn btn-primary btn-xl text-uppercase mt-3" type="button">
                            <i class="fas fa-paper-plane-o ml-1"></i>
                            बंद करें
                        </button>
                    </div>
            </form>
        </div>
    </div>
</div>