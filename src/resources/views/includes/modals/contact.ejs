<div class="portfolio-modal modal fade" id="contact-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content text-start">
            <div class="close-modal" data-bs-dismiss="modal">
                <img src="assets/img/close-icon.svg" alt="Close modal" />
            </div>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="modal-body">
                            <form class="needs-validation" method="post" action="/contact">
                                <div class="modal-body mx-3">
                                    <div class="md-form">
                                        <i class="fas fa-user prefix grey-text"></i>
                                        <input type="text" placeholder="Name *" id="cname" class="form-control">
                                        <div class="invalid-feedback">Please provide a valid Name.</div>
                                        <div class="md-form">
                                            <i class="fas fa-envelope prefix grey-text"></i>
                                            <input type="email" placeholder="Email *" id="cemail"
                                                class="form-control validate">
                                            <div class="invalid-feedback">Please provide a valid Email.</div>
                                        </div>
                                        <div class="md-form pt-3">
                                            <i class="fas fa-phone prefix grey-text"></i><br>
                                            <input type="tel" placeholder="Phone *" id="cphone" class="form-control validate">
                                            <div class="invalid-feedback">Please provide a valid Phone No.</div>
                                        </div>
                                        <div class="md-form">
                                            <i class="fas fa-pencil prefix grey-text"></i>
                                            <textarea type="text" id="cmessage" placeholder="Message"
                                                class="md-textarea form-control" rows="4"></textarea>
                                        </div>
                                        <button class="btn btn-primary btn-xl text-uppercase mt-3" type="button">
                                            <i class="fas fa-paper-plane-o ml-1"></i>
                                            Submit
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>